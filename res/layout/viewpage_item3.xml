<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置每周各天背新单词计划(必填):"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:text="说明:0代表当天不背新单词。"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期一:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/addbook_monday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/addbook_weekplan_unit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期二:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/addbook_tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/addbook_weekplan_unit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期三:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/addbook_wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/addbook_weekplan_unit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期四:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/addbook_thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/addbook_weekplan_unit4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期五:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/addbook_friday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/addbook_weekplan_unit5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期六:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/addbook_saturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/addbook_weekplan_unit6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期日:"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/addbook_sunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint=""
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/addbook_weekplan_unit7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>