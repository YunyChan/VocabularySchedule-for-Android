<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平均每页单词数(必填):"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addbook_PerPageAvgWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入粗略估计即可"
            android:singleLine="true"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平均每"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addbook_PerPartAvgPage_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="页数"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addbook_PerPartAvgPage_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(必填):"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/addbook_PerPartAvgPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入粗略估计即可"
            android:singleLine="true"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背诵范围:"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/addbook_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="起始"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/addbook_range_unit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="页"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/addbook_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="结束"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/addbook_range_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="页"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置背诵起始日期(必填):"
            android:textSize="20sp" />

        <Button
            android:id="@+id/addbook_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击设置"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10px" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置复习模式(必填):"
            android:textSize="20sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>